{
  "name": "gfl-cli",
  "version": "1.0.0",
  "description": "Git Fantasy League - Command Line Interface",
  "type": "module",
  "bin": {
    "gfl": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run fix-imports && npm run postbuild",
    "fix-imports": "node scripts/fix-esm-imports.js",
    "postbuild": "chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "prebuild": "rm -rf dist",
    "link": "npm run build && npm link",
    "unlink": "npm unlink -g gfl-cli"
  },
  "keywords": [
    "fantasy",
    "football",
    "cli",
    "git",
    "devops"
  ],
  "author": "Martin Palastanga <palastanga@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "dayjs": "^1.11.10",
    "figlet": "^1.7.0",
    "ink": "^6.2.2",
    "ink-big-text": "^2.0.0",
    "ink-box": "^1.0.0",
    "ink-gradient": "^3.0.0",
    "ink-link": "^4.1.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^9.2.12",
    "lodash": "^4.17.21",
    "ora": "^7.0.1",
    "react": "^19.1.1",
    "update-notifier": "^7.0.0",
    "validator": "^13.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@types/react": "^19.1.10",
    "@types/update-notifier": "^6.0.8",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
